name: Chat GPT Connector Agent
type: MyOS/Agent
description: Lets the owner prompt installation of a provided MyOS Package.

contracts:
  ownerChannel:
    type: MyOS/MyOS Timeline Channel

  startWorker:
    type: Conversation/Operation
    channel: ownerChannel
    description: Prompt the user to install a provided MyOS Package
    request:
      package:
        type: MyOS/MyOS Package
        description: MyOS Package

  startWorkerImpl:
    type: Conversation/Sequential Workflow Operation
    operation: startWorker
    steps:
      - name: Emit Install Prompt
        type: Conversation/Trigger Event
        event:
          type: MyOS/Inform User To Install MyOS Package
          title: ChatGPT is requesting permission to launch a new agent
          message: A package has been prepared for you. Review and install.
          package:
            type: MyOS/MyOS Package
            value: ${event.message.request.package}
